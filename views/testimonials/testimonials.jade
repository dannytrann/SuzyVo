#inner-testimonials(ng-controller='TestimonialController as testCtrl')
    section.text-center
        h1 Testimonials
    section#instructions.col.s12.text-center
        p Click on a name and see what they think about our product
    .row
        .col.s6.m3(ng-repeat='testimonial in testCtrl.testimonials')
            // Modal Trigger
            a.waves-effect.waves-light.btn.modal-trigger.col-xs-12(ng-click="testCtrl.openModal('#'+testimonial.id)")
                p {{testimonial.name}}
                h5 {{testimonial.location}}
            // Modal Structure
            .modal(ng-attr-id='{{testimonial.id}}')
                div.margin-top-3.margin-bottom-3.margin-right-3.margin-left-3
                    h4 {{testimonial.name}}
                        span#testLocation {{testimonial.location}}
                    p {{testimonial.comment}}
                    .action-bar
                        a.waves-effect.waves-green.btn-flat.modal-action.modal-close.blue(href='#') Close